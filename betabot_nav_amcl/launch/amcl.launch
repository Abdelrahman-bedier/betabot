<launch>
    <arg name="map_file" default="$(find betabot_nav_amcl)/maps/map2d.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

    <node name="amcl" pkg="amcl" type="amcl" output="screen">
         <param name="odom_frame_id" value="odom"/>
         <param name="odom_model_type" value="diff-corrected"/>
         <param name="base_frame_id" value="base_footprint"/>
         <param name="global_frame_id" value="map"/>
         <param name="use_map_topic" value="true"/>        
         <param name="min_particles" value="500"/>
         <param name="max_particles" value="1500"/>
   </node>

   <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
            <param name="base_global_planner" value="navfn/NavfnROS" />
            <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/> 
            <rosparam file="$(find betabot_nav_amcl)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
            <rosparam file="$(find betabot_nav_amcl)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
            <rosparam file="$(find betabot_nav_amcl)/config/local_costmap_params.yaml" command="load" />
            <rosparam file="$(find betabot_nav_amcl)/config/global_costmap_params.yaml" command="load" />
            <rosparam file="$(find betabot_nav_amcl)/config/base_local_planner_params.yaml" command="load" />
   </node>

   
</launch>